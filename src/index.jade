  body#home-page
    script.
      require(['jquery'], function($) {
        $(document).ready(function() {
          require(['javascripts/lib/main.js'], function() {
          });
        });
      });

    div.column.full-col#main-nav
      div.container
        h3 DEWS
    div.column.full-col#aspot-banner
      h1 Forms Man
        p Forms dude
    div.column.full-col.section-header
      div.container
        h2 These are some forms
        p For real though
    div.column.full-col.main-content
      div.container#contact-forms
        form.parse-form(data-object-name="SweetObject")
          div.column.six-col.form-element
            label(for="name")
              span Name
              input(type="text", name="name", placeholder="text")
          div.column.six-col.form-element
            label(for="isCool")
              span Are you cool?
              select(name="isCool")
                option(value="Yes") Yes
                option(value="No") No
                option(value="Maybe") Maybe
          div.column.six-col.form-element
            fieldset#isPing
              legend Do You Like Ping Pong
              div
                label(for="radio1")
                  span Yes
                  input(type="radio", value="Yes" name="radioExample")#radio1
              div
                label(for="radio2")
                  span No
                  input(type="radio", value="No" name="radioExample")#radio2
          div.column.six-col.form-element
            label(for="checkExample")
              span I like banana
              input(type="checkbox", name="checkExample")
          div.column.six-col.form-element
            label(for="textAreaExample")
              span Textarea
              textarea(name="textAreaExample", placeholder="text")

          input(type="submit")

    div.column.full-col#footer
      div.container
        p &copy; 2014 Footer Content









